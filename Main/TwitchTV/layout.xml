<?xml version="1.0" encoding="utf-8"?>
<layout onLaunch="launch" onVolumeUp="volume_up" onVolumeDown="volume_down" onResume="resume" onPause="pause" color="#8763ca">
  <grid>
    <row>
      <button icon="vdown" onTap="volume_down" />
      <button icon="vup" onTap="volume_up" />
    </row>
    <row>
      <button icon="playpause" onTap="play_pause" />
    </row>
    <row>
      <button icon="fullscreen" onTap="fullscreen" />
      <button text="Esc" onTap="window" />
    </row>
  </grid>
</layout>